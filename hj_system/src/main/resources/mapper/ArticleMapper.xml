<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.mapper.article.ArticleMapper">

    <resultMap id="BaseResultMap" type="com.hj.entity.article.Article">
        <id property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="imageInput" column="image_input" jdbcType="VARCHAR"/>
        <result property="synopsis" column="synopsis" jdbcType="VARCHAR"/>
        <result property="visit" column="visit" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="adminId" column="admin_id" jdbcType="INTEGER"/>
        <result property="merId" column="mer_id" jdbcType="INTEGER"/>
        <result property="isHot" column="is_hot" jdbcType="TINYINT"/>
        <result property="isBanner" column="is_banner" jdbcType="TINYINT"/>
        <result property="isShow" column="is_show" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="wechatNewsId" column="wechat_news_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        article_id
        ,cid,title,
        author,image_input,synopsis,
        visit,sort,url,
        admin_id,mer_id,is_hot,
        is_banner,is_show,create_time,
        update_time,wechat_news_id,status
    </sql>

    <select id="getArticleList" resultType="com.hj.vo.article.ArticleVo" parameterType="string">
        select ea.article_id,
               ea.cid,
               ea.title,
               ea.author,
               ea.image_input,
               ea.synopsis,
               ea.visit,
               ea.sort,
               ea.url,
               ea.admin_id,
               ea.mer_id,
               ea.is_hot,
               ea.is_banner,
               ea.is_show,
               ea.create_time,
               ea.update_time,
               ea.wechat_news_id,
               ea.status,
               eac.title categoryTitle
        from eb_article ea
                 left join eb_article_category eac on ea.cid = eac.article_category_id
        where ea.status = 1
          and ea.title like concat('%', #{title}, '%')
        order by ea.sort desc
    </select>
</mapper>
