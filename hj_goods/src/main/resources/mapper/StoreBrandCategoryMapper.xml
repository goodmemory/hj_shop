<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.mapper.StoreBrandCategoryMapper">

    <resultMap id="BaseResultMap" type="com.hj.entity.store.StoreBrandCategory">
        <id property="storeBrandCategoryId" column="store_brand_category_id" jdbcType="BIGINT"/>
        <result property="pid" column="pid" jdbcType="BIGINT"/>
        <result property="cateName" column="cate_name" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="isShow" column="is_show" jdbcType="TINYINT"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        store_brand_category_id
        ,pid,cate_name,
        path,sort,is_show,
        level,create_time,update_time,
        status
    </sql>

    <select id="getStoreBrandCategoryPage" parameterType="long" resultType="com.hj.vo.store.StoreBrandCategoryVo">
        select
        <include refid="Base_Column_List"></include>
        from eb_store_brand_category
        where status=1 and pid=#{pid}
        order by sort desc
    </select>

    <select id="getStoreBrandCategoryAllList" parameterType="long"
            resultType="com.hj.vo.store.StoreBrandCategoryOneVo">
        select store_brand_category_id, pid, cate_name
        from eb_store_brand_category
        where status = 1
          and pid = #{pid}
        order by sort desc
    </select>
</mapper>
