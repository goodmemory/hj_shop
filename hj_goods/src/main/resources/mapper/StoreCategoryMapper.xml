<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.mapper.StoreCategoryMapper">

    <resultMap id="BaseResultMap" type="com.hj.entity.store.StoreCategory">
        <id property="storeCategoryId" column="store_category_id" jdbcType="VARCHAR"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="cateName" column="cate_name" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="pic" column="pic" jdbcType="VARCHAR"/>
        <result property="isShow" column="is_show" jdbcType="TINYINT"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="merId" column="mer_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isHot" column="is_hot" jdbcType="TINYINT"/>
        <result property="isDeliveryConfirm" column="is_delivery_confirm" jdbcType="TINYINT"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        store_category_id
        ,pid,cate_name,
        path,sort,pic,
        is_show,level,mer_id,
        create_time,update_time,is_hot,
        is_delivery_confirm,status
    </sql>

    <select id="getStoreCategoryListAll" parameterType="string" resultType="com.hj.vo.store.StoreCategoryVo">
        select
        <include refid="Base_Column_List"></include>
        from eb_store_category
        where status=1 and pid=#{pid}
        order by sort desc
    </select>

    <select id="getStoreCategoryNotEqLevel2List" parameterType="string" resultType="com.hj.vo.store.StoreCategoryOneVo">
        select store_category_id, pid, cate_name
        from eb_store_category
        where status = 1
          and pid = #{pid}
          and level!=2
        order by sort desc
    </select>

    <select id="getStoreCategoryById" parameterType="string" resultType="com.hj.vo.store.StoreCategoryTwoVo">
        select store_category_id, pid, cate_name
        from eb_store_category
        where status = 1
          and store_category_id = #{id}
        order by sort desc
    </select>
</mapper>
